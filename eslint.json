{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "max-len": 0,
    "eol-last": 0,
    "no-underscore-dangle": [
      2,
      { "allow": ["__REDUX_DEVTOOLS_EXTENSION_COMPOSE__"] }
    ],
    "class-methods-use-this": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".js", ".jsx"] }
    ],
    "no-unused-expressions": "warn"
  },
  "globals": {
    "window": true,
    "module": true,
    "document": true,
    "localStorage": true,
    "describe": true,
    "it": true,
    "expect": true,
    "SyntheticEvent": true,
    "navigator": true,
    "test": true,
    "beforeEach": true,
    "jest": true
  }
}
